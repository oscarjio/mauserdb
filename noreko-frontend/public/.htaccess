<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Skippa noreko-backend API-anrop
  RewriteRule ^noreko-backend/ - [L]

  # Angular SPA: alla andra requests som inte matchar en fil -> index.html
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
